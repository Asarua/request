{
  "name": "request",
  "version": "1.0.0",
  "description": "a simple http request repository",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "shift-commit-message": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "rewrite-commit-message": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Asarua/request.git"
  },
  "keywords": [
    "http",
    "fetch",
    "ajax"
  ],
  "author": "Asarua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Asarua/request/issues"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "post-commit": "npm run shift-commit-message && git add"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": false,
        "multiple": false
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "",
      "autoFix": false
    }
  },
  "homepage": "https://github.com/Asarua/request#readme",
  "devDependencies": {
    "ghooks": "^2.0.4",
    "typescript": "^4.1.3",
    "validate-commit-msg": "^2.14.0"
  }
}
